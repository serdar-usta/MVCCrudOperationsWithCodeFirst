@{
    Layout = null;
}
@model MvcCrudWithCodeFirst.Models.Credential

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">
    @*<link rel="icon" href="../../favicon.ico">*@

    <title>X Course Login</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Assets/sb-admin/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/Assets/bootstrap/css/signin.css" rel="stylesheet">
</head>

<body>

    <div class="container">


        @using (Html.BeginForm("Login", "Authentication", FormMethod.Post, new { @class = "form-signin" }))
        {
            <h2 class="form-signin-heading">X Course Giriş</h2>
            if (TempData["ResultMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ResultMessage"]
                </div>
            }
            @Html.LabelFor(m => m.Username, "Kullanıcı Adı", new { @class = "sr-only"})
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", required = "required", placeholder = "Kullanıcı Adınız" })
            @Html.LabelFor(m => m.Password, "Parola", new { @class = "sr-only" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required", placeholder = "Şifreniz" })
            <div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me"> Beni hatırla
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Giriş</button>
        }

    </div>
</body>
</html>
