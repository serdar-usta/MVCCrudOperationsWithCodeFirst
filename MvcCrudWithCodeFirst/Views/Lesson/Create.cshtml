        //        name: 'Tsubasa'
        //    };

        //function Person()
        //{
        //    this.id = 0;
        //    this.name = '';
        //}

        //var person = new Person();
        //Person.

        $(document).ready(function () {

            $('#save_lesson').click(function () {

                var ajaxOptions = {
                    url: '/Lesson/Create',
                    type: 'post',
                    data: {
                        Name: $('#Name').val(),
                        TeacherId: $('#TeacherId').val()
                    },
                    success: function (result) {

                        if (result == 'true') {

                            window.location = '/Lesson/Index';

                        }

                    }
                };

                $.ajax(ajaxOptions);

            });




            //$('#save_lesson').on('click', function () { });

        });

    </script>
}