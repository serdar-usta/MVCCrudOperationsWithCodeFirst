@using MvcCrudWithCodeFirst.Models
@model List<Message>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-envelope"></i> <b class="caret"></b></a>
    <ul class="dropdown-menu message-dropdown">

        @foreach (Message msg in Model)
        {
            <li class="message-preview">
                <a href="#">
                    <div class="media">
                        <span class="pull-left">
                            <img class="media-object" src="http://placehold.it/50x50" alt="">
                        </span>
                        <div class="media-body">
                            <h5 class="media-heading">
                                <strong>@msg.Sender.FullName</strong>
                            </h5>
                            <p class="small text-muted"><i class="fa fa-clock-o"></i> @msg.MessageDate.ToShortDateString()</p>
                            <p>@msg.Subject</p>
                        </div>
                    </div>
                </a>
            </li>
        }
        <li class="message-footer">
            <a href="#">Tüm mesajları görüntüle</a>
        </li>
    </ul>
</li>