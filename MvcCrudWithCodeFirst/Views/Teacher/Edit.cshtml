@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MvcCrudWithCodeFirst.Models.Teacher

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Eğitmenler
                <small>/ Eğitmen Güncelle</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="/">Giriş</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Eğitmen Güncelle
                </li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-8 col-md-6 col-lg-4">

            @using (Html.BeginForm("Edit", "Teacher", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Id)
                @*<input type="hidden" value="@Model.Id" name="Id" />*@
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, "Adı")
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, "Soyadı")
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Proficiency, "Uzmanlık")
                    @Html.EnumDropDownListFor(m => m.Proficiency, new { @class = "form-control" })
                </div>
                <div class="form-group pull-right">
                    @Html.ActionLink("Geri dön", "Index", null, new { @class = "btn btn-warning" })
                    <button type="submit" class="btn btn-primary">
                        Kaydet
                    </button>
                </div>
            }

        </div>
    </div>

    <!-- /.row -->
</div>
