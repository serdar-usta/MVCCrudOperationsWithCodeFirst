
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<MvcCrudWithCodeFirst.Models.Teacher>
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Eğitmen
                <small>/ Tüm Eğitmenler</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="/">Giriş</a>
                </li>
                <li class="active">
                    <i class="fa fa-file"></i> Eğitmenler
                </li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th>Uzmanlık</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teacher in Model)
                    {
                        <tr>
                            <td>@teacher.Id</td>
                            <td>@teacher.FirstName</td>
                            <td>@teacher.LastName</td>
                            <td>@teacher.Proficiency</td>
                            <td>@Html.ActionLink("Düzenle", "Edit", new { Id = teacher.Id })</td>
                            <td>@Html.ActionLink("Sil", "Delete", new { Id = teacher.Id })</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    <!-- /.row -->
</div>

